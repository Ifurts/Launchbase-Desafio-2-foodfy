{% extends "layout.njk" %}

{% block head %}
    <title>Receita</title>
{% endblock %}
    {% block links %}
        <div class="links">
            <a href="/about" id="about">Sobre</a>
            <a href="/recipes" id="recipe"><b>Receitas</b></a>
        </div>
    {% endblock links %}

{% block content %}

    <div class="full-recipe">

        <div class="big-card">
            <img src="{{items.image}}" alt="burger">
            <p id="title">{{items.title}}</p>
            <p class="author">Por {{items.author}}</p>
        </div>

        <div class="block">
             <h2>Ingredientes</h2>
            <button id="ing" class="buttom-toogle">MOSTRAR</button>
         </div>

        <ul id="ingred" class="hide">

        {% for ingredients in items.ingredients %}

            <li> {{ingredients}}</li>

        {% endfor %}

        </ul>
            
        <div class="block">
            <h2>Modo de Preparo</h2>
            <button id="prep" class="buttom-toogle">MOSTRAR</button>   
        </div>
            <p class="hide" id="prepa">{{items.preparation}}</p>
            
           
        <div class="block">
            <h2>Informações adicionais</h2>
             <button id="info" class="buttom-toogle">MOSTRAR</button>
        </div>
            <p class="hide" id="infor">{{items.information}}</p>
        
    </div>
    <script src="/scripts.js"></script>
{% endblock %}