{% extends "layout.njk" %}

    {% block head %}
    <title>Receitas</title>
    {% endblock %}

    {% block links %}
        <div class="links">
            <a href="/about" id="about">Sobre</a>
            <a href="/recipes" id="recipe"><b>Receitas</b></a>
        </div>
    {% endblock links %}

    {% block content %}
    
    <main id="index">
        
        <section class="cards">

            {% for item in items %}
            
            <div class="card" id="{{loop.index0}}">
                <img src="{{item.image}}" alt="burger">
                <p id="title">{{item.title}}</p> 
                <p>Por {{item.author}}</p>
            </div>

            {% endfor %}

        </section>

    </main>
    <script src="/scripts.js"></script>
    {% endblock %}