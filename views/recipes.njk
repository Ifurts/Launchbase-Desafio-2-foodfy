{% extends "layout.njk" %}

    {% block head %}
    <title>Receitas</title>
    {% endblock %}

    {% block content %}
    
    <main id="index">
        
        <section class="cards">

            {% for item in items %}

            <div class="card" >
                <a href="/full-recipe"><img src="{{item.image}}" alt="burger"></a>
                <p id="title">{{item.title}}</p> 
                <p>Por {{item.author}}</p>
            </div>

            {% endfor %}

        </section>

    </main>
    
    {% endblock %}