{% extends "layout.njk" %}

    {% block head %}
    <title>Receitas</title>
    {% endblock %}

    {% block content %}
    
    <main id="index">
        
        <section class="cards">

            {% for item in items %}
            
            <div class="card" id="{{loop.index0}}">
                <img src="{{item.image}}" alt="burger">
                <p id="title">{{item.title}}</p> 
                <p>Por {{item.author}}</p>
            </div>

            {% endfor %}

        </section>

    </main>
    <script src="/scripts.js"></script>
    {% endblock %}